@model IEnumerable<RpshopingMvc.Models.userinfoview>
@{
    ViewBag.Title = "用户管理";
    Layout = "~/Views/Shared/_LayoutBackground.cshtml";
}
<nav class="navbar navbar-default">
    <div class="container-fluid">
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li>
                        <a href="@Url.Action("Create")">新增<label style="margin-left:15px;">|</label></a>
                </li>
            </ul>
            <form class="navbar-form navbar-left">
                <div class="form-group" style="margin-left:20px;">
                    用户姓名：<input type="text" name="filter" class="form-control" placeholder="Search" value="@Request["filter"]">
                </div>
                <button type="submit" class="btn btn-default">搜索</button>
                <a href="@Url.Action("SetCode")" class="btn btn-default" style="margin-left:60px;">生成二维码</a>
            </form>
        </div>
    </div>
</nav>
<table class="table  table-hover table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Balance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Integral)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstCharge)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RewardMoney)
            </th>
            <th></th>
        </tr>
    </thead>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Balance)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Integral)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstCharge)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RewardMoney)
                </td>
                <td>
                    @Html.ActionLink("编辑", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("详情", "Details", new { id = item.ID }) |
                    @Html.ActionLink("删除", "Delete", new { id = item.ID })
                </td>
            </tr>
        }

</table>
@Html.PageList((PagedList.IPagedList<RpshopingMvc.Models.userinfoview>)Model, Url.PageUrl())
