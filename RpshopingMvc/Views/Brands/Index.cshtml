@model IEnumerable<RpshopingMvc.Models.BrandShow>

@{
    ViewBag.Title = "品牌";
    Layout = "~/Views/Shared/_LayoutBackground.cshtml";
}

<nav class="navbar navbar-default">
    <div class="container-fluid">
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li>
                    <a href="@Url.Action("Create")">新增<label style="margin-left:15px;">|</label></a>
                </li>
            </ul>
            <form class="navbar-form navbar-left">
                <div class="form-group" style="margin-left:20px;">
                    品牌名称：<input type="text" name="filter" class="form-control" placeholder="Search" value="@Request["filter"]">
                </div>
                <button type="submit" class="btn btn-default">搜索</button>
            </form>
        </div>
    </div>
</nav>
<table class="table  table-hover table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sort)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Explain)
            </th>
            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sort)
        </td>
        <td>
            @Html.TableImg(item.Image == "" ? "" : item.Image.Split(',')[0].ToString())
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Explain)
        </td>
        <td>
            @Html.ActionLink("编辑", "Edit", new { id = item.ID }) |
            @*@Html.ActionLink("详情", "Details", new { id = item.ID }) |*@
            @Html.ActionLink("删除", "Delete", new { id = item.ID })
        </td>
    </tr>
    }

</table>
@Html.PageList((PagedList.IPagedList<RpshopingMvc.Models.BrandShow>)Model, Url.PageUrl())